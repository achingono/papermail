@page
@model PaperMail.Web.Pages.ComposeModel
@{
    ViewData["Title"] = "Compose Email";
}

<div class="container">
    <nav class="breadcrumb">
        <a href="/inbox">‚Üê Inbox</a>
    </nav>

    <header class="page-header">
        <h1>Compose Email</h1>
    </header>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-error" role="alert">
            <strong>Error:</strong> @Model.ErrorMessage
        </div>
    }

    @if (Model.ValidationErrors.Any())
    {
        <div class="alert alert-error" role="alert">
            <strong>Please fix the following errors:</strong>
            <ul class="list-disc ml-6 mt-2">
                @foreach (var error in Model.ValidationErrors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    <form method="post" data-validate>
        <div class="form-group">
            <label for="to">To:</label>
            <input type="text" 
                   id="to" 
                   name="EmailRequest.To" 
                   asp-for="EmailRequest.To" 
                   placeholder="recipient@example.com" 
                   required 
                   aria-required="true"
                   aria-describedby="to-help" />
            <p id="to-help" class="text-sm text-eink-gray mt-1">Separate multiple recipients with commas</p>
        </div>

        <div class="form-group">
            <label for="subject">Subject:</label>
            <input type="text" 
                   id="subject" 
                   name="EmailRequest.Subject" 
                   asp-for="EmailRequest.Subject" 
                   required 
                   aria-required="true" 
                   maxlength="200" />
        </div>

        <div class="form-group">
            <label for="body">Message:</label>
            <textarea id="body" 
                      name="EmailRequest.BodyPlain" 
                      asp-for="EmailRequest.BodyPlain" 
                      rows="20" 
                      required 
                      aria-required="true"
                      class="font-mono"></textarea>
        </div>

        <div class="flex gap-3 mt-6">
            <button type="submit" name="action" value="send" class="btn btn-primary">Send Email</button>
            <button type="submit" name="action" value="draft" class="btn btn-secondary">Save Draft</button>
            <a href="/inbox" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
