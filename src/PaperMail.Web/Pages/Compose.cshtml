@page
@model PaperMail.Web.Pages.ComposeModel
@{
    ViewData["Title"] = "Compose Email";
}

<div class="container">
    <header class="page-header">
        <h1>Compose Email</h1>
    </header>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-error" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.ValidationErrors.Any())
    {
        <div class="alert alert-error" role="alert">
            <ul>
                @foreach (var error in Model.ValidationErrors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    <form method="post" class="compose-form">
        <div class="form-group">
            <label for="to">To:</label>
            <input type="text" id="to" name="EmailRequest.To" asp-for="EmailRequest.To" 
                   placeholder="recipient@example.com (comma-separated for multiple)" 
                   required aria-required="true" />
        </div>

        <div class="form-group">
            <label for="subject">Subject:</label>
            <input type="text" id="subject" name="EmailRequest.Subject" asp-for="EmailRequest.Subject" 
                   required aria-required="true" maxlength="200" />
        </div>

        <div class="form-group">
            <label for="body">Message:</label>
            <textarea id="body" name="EmailRequest.BodyPlain" asp-for="EmailRequest.BodyPlain" 
                      rows="20" required aria-required="true"></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" name="action" value="send" class="btn btn-primary">Send</button>
            <button type="submit" name="action" value="draft" class="btn btn-secondary">Save Draft</button>
            <a href="/inbox" class="btn btn-tertiary">Cancel</a>
        </div>
    </form>
</div>
