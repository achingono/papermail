@page
@model PaperMail.Web.Pages.OAuth.LoginModel
@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PaperMail</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }
        .login-container {
            background: white;
            border: 2px solid #000;
            max-width: 400px;
            width: 100%;
            padding: 40px;
            text-align: center;
        }
        h1 {
            font-size: 32px;
            margin-bottom: 12px;
            font-weight: 700;
        }
        p {
            color: #666;
            margin-bottom: 32px;
            line-height: 1.5;
        }
        .btn-login {
            display: inline-block;
            background: #000;
            color: white;
            padding: 14px 32px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            border: none;
            cursor: pointer;
            transition: opacity 0.2s;
        }
        .btn-login:hover {
            opacity: 0.8;
        }
        .features {
            margin-top: 40px;
            text-align: left;
            border-top: 1px solid #ddd;
            padding-top: 24px;
        }
        .features h2 {
            font-size: 14px;
            text-transform: uppercase;
            margin-bottom: 16px;
            color: #999;
        }
        .features ul {
            list-style: none;
        }
        .features li {
            padding: 8px 0;
            color: #333;
        }
        .features li:before {
            content: "âœ“ ";
            font-weight: bold;
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>PaperMail</h1>
        <p>Email optimized for E-Ink devices. Fast, simple, readable.</p>
        
        <a href="/oauth/callback" class="btn-login">Sign in with Google</a>
        
        <div class="features">
            <h2>Features</h2>
            <ul>
                <li>E-Ink optimized design</li>
                <li>Minimal bandwidth usage</li>
                <li>OAuth 2.0 secure authentication</li>
                <li>Read-only IMAP access</li>
            </ul>
        </div>
    </div>
</body>
</html>
