<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="PaperMail - Email client optimized for E-Ink devices" />
    <title>@ViewData["Title"] - PaperMail</title>
    <link rel="icon" type="image/png" href="/icon.svg" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>

<body class="min-h-screen flex flex-col">
    <main role="main" class="flex-1 flex flex-col">
        @await Html.PartialAsync("_Header")
        <div class="flex-1 flex overflow-hidden">
            @RenderBody()
        </div>
    </main>

    <footer class="border-t-2 border-eink-black mt-8 no-print">
        <div class="container py-4 text-center text-sm text-eink-gray">
            <p>&copy; @DateTime.Today.Year PaperMail - Optimized for E-Ink</p>
            <p class="mt-2">
                <kbd class="px-2 py-1 border border-eink-gray">?</kbd> for keyboard shortcuts
            </p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>