@page "{id:guid}"
@using Papermail.Web.Models
@model Papermail.Web.Pages.EmailModel
@{
    ViewData["Title"] = Model.ViewModel.Email?.Subject ?? "Email";
}

<div class="flex h-full w-full">
    @await Html.PartialAsync("_Aside")
    
    <section class="flex flex-col flex-1 w-full overflow-hidden">
        @if (Model.ViewModel.Email != null)
        {
            <!-- Email Header -->
            <div class="border-b border-gray-200 bg-white px-6 py-4">
                <div class="flex items-center justify-between mb-4">
                    <h1 class="text-2xl font-semibold text-gray-900">@Model.ViewModel.Email.Subject</h1>
                    <a href="@Model.ReturnUrl" class="text-sm text-blue-600 hover:text-blue-800">‚Üê Back to list</a>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex gap-2 flex-wrap">
                    @if (Model.ViewModel.CanReply)
                    {
                        <form method="post" asp-page-handler="Reply" class="inline">
                            <button type="submit" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
                                </svg>
                                Reply
                            </button>
                        </form>
                    }
                    
                    @if (Model.ViewModel.CanReplyAll)
                    {
                        <form method="post" asp-page-handler="ReplyAll" class="inline">
                            <button type="submit" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                                Reply All
                            </button>
                        </form>
                    }
                    
                    @if (Model.ViewModel.CanForward)
                    {
                        <form method="post" asp-page-handler="Forward" class="inline">
                            <button type="submit" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                                </svg>
                                Forward
                            </button>
                        </form>
                    }
                    
                    @if (Model.ViewModel.CanDelete)
                    {
                        <form method="post" asp-page-handler="Delete" class="inline">
                            <button type="submit" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                                Delete
                            </button>
                        </form>
                    }
                    
                    @if (Model.ViewModel.CanArchive)
                    {
                        <form method="post" asp-page-handler="Archive" class="inline">
                            <button type="submit" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                                </svg>
                                Archive
                            </button>
                        </form>
                    }
                    
                    @if (Model.ViewModel.CanMarkAsJunk)
                    {
                        <form method="post" asp-page-handler="Junk" class="inline">
                            <button type="submit" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-orange-700 bg-white hover:bg-orange-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                                <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                </svg>
                                Mark as Junk
                            </button>
                        </form>
                    }
                </div>
            </div>
            
            <!-- Email Metadata -->
            <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                <div class="space-y-2">
                    <div class="flex">
                        <span class="font-semibold text-gray-700 w-24">From:</span>
                        <span class="text-gray-900">@Model.ViewModel.Email.From.Name &lt;@Model.ViewModel.Email.From.Address&gt;</span>
                    </div>
                    <div class="flex">
                        <span class="font-semibold text-gray-700 w-24">To:</span>
                        <span class="text-gray-900">@string.Join(", ", Model.ViewModel.Email.To.Select(t => $"{t.Name} <{t.Address}>"))</span>
                    </div>
                    @if (Model.ViewModel.Email.Cc?.Any() == true)
                    {
                        <div class="flex">
                            <span class="font-semibold text-gray-700 w-24">Cc:</span>
                            <span class="text-gray-900">@string.Join(", ", Model.ViewModel.Email.Cc.Select(t => $"{t.Name} <{t.Address}>"))</span>
                        </div>
                    }
                    <div class="flex">
                        <span class="font-semibold text-gray-700 w-24">Date:</span>
                        <span class="text-gray-900">@Model.ViewModel.Email.Date.ToString("f")</span>
                    </div>
                </div>
            </div>
            
            <!-- Email Body -->
            <div class="flex-1 overflow-auto bg-white px-6 py-4">
                @if (!string.IsNullOrWhiteSpace(Model.ViewModel.Email.HtmlBody))
                {
                    <div class="prose max-w-none">
                        @Html.Raw(Model.ViewModel.Email.HtmlBody)
                    </div>
                }
                else
                {
                    <div class="whitespace-pre-wrap font-mono text-sm text-gray-800">
                        @Model.ViewModel.Email.Body
                    </div>
                }
                
                @if (Model.ViewModel.Email.Attachments?.Any() == true)
                {
                    <div class="mt-8 pt-4 border-t border-gray-200">
                        <h3 class="font-semibold text-gray-900 mb-3">Attachments (@Model.ViewModel.Email.Attachments.Count)</h3>
                        <div class="space-y-2">
                            @foreach (var attachment in Model.ViewModel.Email.Attachments)
                            {
                                <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                                    <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
                                    </svg>
                                    <div class="flex-1">
                                        <p class="text-sm font-medium text-gray-900">@attachment.FileName</p>
                                        <p class="text-xs text-gray-500">@FormatFileSize(attachment.SizeBytes)</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="flex items-center justify-center h-full">
                <p class="text-gray-500">Email not found</p>
            </div>
        }
    </section>
</div>

@functions {
    string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}
